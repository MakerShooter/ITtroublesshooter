<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.ittroublesshooter.MainActivity"
    >

    <ImageView
        app:srcCompat="@drawable/laptop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:scaleType="centerCrop" />

    <TextView
        android:text="@string/footerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/footer_Text"
        android:textColor="#F44336"
        android:textSize="36sp"
        android:textStyle="bold"
        android:padding="10dp"
        />


    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imageView2"
        android:layout_above="@+id/footer_Text"
        android:layout_alignRight="@+id/footer_Text"
        android:layout_alignEnd="@+id/footer_Text"
        android:background="#9E9E9E"
        android:padding="1dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/headerText"
        android:textColor="#F44336"
        android:textSize="24sp"
        android:padding="10dp"
        android:textStyle="bold"
        android:id="@+id/header_Text"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>
